<tr class="<%= trclass %> item on">
  <td>
    <div class="level-0">
      <span>
        <%= "#{item.created_at.strftime("Сегодня в %R")}" if item.created_at.today? %>
        <%= "#{item.created_at.strftime("Вчера в %R")}" if item.created_at.to_date == Date.yesterday %>
        <%= "#{item.created_at.strftime("%F %R")}" if item.created_at.to_date < Date.yesterday %>
      </span>
      <%= link_to "#{item.title}", {:action=>"edit", :id=>item.publicationgroup.id, :tid=>item.id}, {:class=>"name icon link"} %>
    </div>
  </td>
  <td class="<%= item.lock ? 'on' : 'off' %>">
		<%= link_to "", {:action=>"toggle_lock", :id=>item.publicationgroup.id, :tid=>item.id}, {:class=>"control activity"} %>
  </td>
  <td>
    <div class="level-0">
		<%= link_to "Удалить", {:action=>"delete", :id=>item.publicationgroup.id, :tid=>item.id}, {:class=>"name icon link"} %>
    </div>
  </td>
  <td>
    
  </td>
</tr>