<div class="page-wrapper container">
	<table class="null-table full content-layout">
		<tr>
	      <td class="header" colspan="2">
	        <h1 style="background-image:url(/images/adminsystem/icons/48/content.png);">Вопросы и ответы / FAQ</h1>
	      </td>
	      <td class="column-right" rowspan="2">
	      </td>
	    </tr>
		<tr>
	      <td class="column-center pagehead">
			<ul class="actions">
				<li>
					<%= link_to "<span>Задать вопрос</span>", new_admin_faq_question_url, {:class=>"minibutton btn-watch"}%>
				</li>
			</ul>
			<div id="githubstyle">
		        <table class="tree-browser" cellspacing="0" cellpadding="0">
		          <tbody>
					<tr class="header">
						<th>п/п</th>
						<th>Переместить</th>
						<th>Вопрос</th>
						<th>Дата вопроса</th>
						<th>Действия</th>
					</tr>
					<% if @new_questions.length > 0 %>
					<tr><td colspan="5"><h3>Вопросы посетителей, требующие ответа:</h3></td></tr>
					<%= render :partial => "list", :locals=>{:collection => @new_questions} %>
					<tr><td colspan="5"><hr /></td></tr>
					<% end %>
					<tr><td colspan="5"><h3>Вопросы, на которые уже дан ответ:</h3></td></tr>
		            <%= render :partial => "list", :locals=>{:collection => @ready} %>
		          </tbody>
		        </table>
			</div>
	      </td>
	    </tr>
	</table>
</div>