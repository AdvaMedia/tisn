{% unless ret == empty %}
<p class="sort-list">
    <strong>Вопросы</strong>&nbsp;
    <a href="#position" class="pseudo{% if live_search_order == 'position' %} active{% endif %}">по дате</a>&nbsp;или&nbsp;<a href="#rate" class="pseudo{% if live_search_order == 'rate' %} active{% endif %}">по значимости</a>
</p>

{% for question in ret %}
	<dl class="user-questions">
		<dt>{{question.title}}</dt>
	    <dd class="">
			<div class="elaboration">{{question.content}}</div>
			<div class="answer corners corners-4">{{question.answer}}</div>
			<!--noindex-->
            <div class="vote-panel a-center">
              <span class="rating" title="Количество голосов за вопрос">{{question.rate}}</span>
				{% unless question.voted %}
						<a class="vote-up" href="{{faq_vote_path}}/?id={{question.id}}" title="Голосовать за вопрос"><i>&nbsp;</i>Оценить</a>
				  {% else %}
						<a class="vote-up on" onclick="return false;" href="#" title="Ваш голос учтен. Спасибо!"><i>&nbsp;</i></a>
				  {% endunless %}
            </div>
            <!--/noindex-->
		</dd>
	</dl>
{% endfor %}
{% if news_all_pages > newst_page %}
<ul class="pagination container block">
	<li class="label">Постраничная навигация:</li>
	{% for page in (1..news_all_pages) %}
	<li class="{% if page == active_page %}active{% endif %}"><a href="{{faq_show_more_url}}">{{page}}</a></li>
	{% endfor %}
</ul>
{% else %}
<input type="hidden" id="show_more_link_hidden" value="{{faq_show_more_url}}" />
{% endif %}
{% elsif show_message %}
<p class="sort-list">
    К сожалению, ни одного вопроса, удовлетворяющего вашему запросу не найдено.<br /> Вы можете задать этот вопрос, воспользовавшись формой выше.
</p>
{% endunless %}