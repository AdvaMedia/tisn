<% form_for :item, :url=>{:action=>"send_faq", :controller=>"Faq", :url=>@page.full_url}, :html=>{:id=>"faq_form_send"} do |f| %>
  <fieldset>
    <div class="f-row width-60">
      <%= f.label :querist, "Ваше имя:" %>
      <div class="i-wrap">
        <%= f.text_field :querist, :class=>"validate['required'] i-text" %>
        <div title="Обязательное поле" class="req">&nbsp;</div>
      </div>
    </div>
  </fieldset>
  <fieldset>
    <button type="submit"><span>Отправить вопрос</span></button>
  </fieldset>
<% end %>

<script type="text/javascript">
  window.addEvent('domready',function(){
    new FormCheck('faq_form_send',{
        display : {
            errorsLocation : 0,
            indicateErrors : 0,
            showErrors : 1,
            addClassErrorToField : 1,
            removeClassErrorOnTipClosure :1
        },
        fieldErrorClass: 'i-invalid'
    });
  });
</script>