<div class="page-wrapper container">
  <table class="null-table full content-layout">
    <tr>
      <td class="header" colspan="2">
        <h1 style="background-image:url(/images/adminsystem/icons/48/content.png);">Список вопросов</h1>
      </td>
      <td class="column-right" rowspan="2">
      </td>
    </tr>
    <tr>
      <td class="column-center">
        <table class="full null-table listing selecting vam">
          <colgroup>
            <col />
            <col width="32px" />
            <col width="32px" />
          </colgroup>
          <tbody>
            <% @items.each do |item| %>
              <tr class="item on">
                <td>
                  <div class="level-0">
                    <%= link_to "#{h item.querytitle} [#{h item.querist}]", {:action=>"edit", :id=>item.id} %>
                  </div>
                </td>
                <td>
                  <%= "Есть ответ" unless item.answer.blank? %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= will_paginate @items %>
      </td>
    </tr>
  </table>
</div>