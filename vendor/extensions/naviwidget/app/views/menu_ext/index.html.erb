<%= render :partial=>"tabs" %>
<div class="page-wrapper container">
  <table class="null-table full content-layout">
    <tr>
      <td class="header" colspan="2">
        <h1 style="background-image:url(/images/adminsystem/icons/48/content.png);">Настройки и описание меню</h1>
      </td>
      <td class="column-right" rowspan="2">
        <!--Control panel-->
        <div class="control-panel">
          <a href="#" class="help">Помощь</a>
          <ul class="roundborder">
            <li>
              <%= link_to "Добавить", {:action=>"new"}, {:class=>"add"} %>
            </li>
          </ul>
        </div>
      </td>
    </tr>
    <tr>
      <td class="column-center">
        <table class="full null-table listing selecting vam">
          <colgroup>
            <col />
            <col width="32px" />
            <col width="32px" />
          </colgroup>
          <tbody>
            <% @items.each do |item| %>
              <tr class="item <%= item.enabled ? "on":"off" %>">
                <td>
                  <div class="level-0">
                    <%= link_to item.name, {:action=>"edit", :id=>item.id}, {:style=>"background-image: url(&quot;/i/icons/16/1273854001_ui-menu-blue.png&quot;);", :class=>"name icon"} %>
                    <div class="description">
                      <p>
                        <%= h item.description %>
                      </p>
                    </div>
                  </div>
                </td>
                <td>
                  <%= link_to "Шаблоны", {:action=>"index", :controller=>"MenuTempate", :id=>item.id}, {:title=>"Настройка меню", :class=>"control"} %>
                </td>
                <td>
                  <%= link_to "Удалить", {:action=>"delete", :id=>item.id}, {:title=>"Настройка меню", :class=>"control"} %>
                </td>
                <td>
                  <%= link_to "", {:action=>"edit", :id=>item.id}, {:title=>"Настройка меню", :class=>"control collapsed"} %>
                </td>
                <td><a href="#" class="control activity"></a></td>
              </tr>
            <% end %>
          </tbody></table>
      </td>
    </tr>
  </table>
</div>