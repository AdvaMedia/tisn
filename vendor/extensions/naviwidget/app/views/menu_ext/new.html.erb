<%= render :partial=>"tabs" %>
<div class="page-wrapper container">
  <table class="null-table full content-layout">
    <tr>
      <td class="header" colspan="2">
        <h1 style="background-image:url(/images/adminsystem/icons/48/content.png);">Редактирование пункта меню</h1>
      </td>
    </tr>
    <tr>
      <td class="column-center">
        <% form_for :item, :url=>{:action=>"create", :controller=>"MenuExt"} do |f| %>
          <fieldset>
            <div class="f-row width-50">
              <%= f.label :name, "Наименование меню" %>
              <div class="i-wrap">
                <%= f.text_field :name, :class=>"i-text" %>
                <div title="Обязательное поле" class="req">&nbsp;</div>
              </div>
              <span class="i-help">Например: Главное меню.</span>
            </div>

            <div class="f-row width-50">
              <%= f.label :description, "Описание меню" %>
              <div class="i-wrap">
                <%= f.text_area :description, :class=>"i-text", :rows=>5 %>
              </div>
              <span class="i-help">Опишите, если хотите как выглядит меню, где оно находится или просто Ваши заметки.</span>
            </div>

            <div class="f-row width-50">
              <%= f.label :enabled, "Видимость меню" %>
              <div class="i-checkbox">
                <%= f.check_box :enabled %>
                <%= f.label :enabled, "Меню активно", {:title=>"Если флажок не установлен, меню будет скрыто от посетителей"}  %>
              </div>
            </div>
          </fieldset>
          <%= submit_tag "Сохранить" %>
        <% end %>
      </td>
    </tr>
  </table>
</div>