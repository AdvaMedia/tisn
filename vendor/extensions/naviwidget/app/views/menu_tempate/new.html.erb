<%= render :partial=>"tabs" %>
<div class="page-wrapper container">
  <table class="null-table full content-layout">
    <tr>
      <td class="header" colspan="2">
        <h1 style="background-image:url(/images/adminsystem/icons/48/content.png);">Редактирование шаблона меню</h1>
      </td>
    </tr>
    <tr>
      <td class="column-center">
        <% form_for :item, :url=>{:action=>"create", :id=>@item.navigate_id, :controller=>"MenuTempate"} do |f| %>
          <fieldset>
            <div class="f-row width-50">
              <%= f.label :level, "Уровень меню, использующих данный шаблон" %>
              <div class="i-wrap">
                <%= f.text_field :level, :class=>"i-text" %>
                <div title="Обязательное поле" class="req">&nbsp;</div>
              </div>
              <span class="i-help">Может быть только число от 0 до 100.</span>
            </div>

            <div class="f-row width-50">
              <%= f.label :template, "Шаблон этого уровня" %>
              <div class="i-wrap">
                <%= f.text_area :template, :class=>"i-text", :rows=>10 %>
              </div>
              <span class="i-help">Измените шаблон этого уровня.</span>
            </div>
          </fieldset>
          <%= submit_tag "Сохранить" %>
        <% end %>
      </td>
    </tr>
  </table>
</div>