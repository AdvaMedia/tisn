<%= render :partial=>"tabs" %>
<div class="page-wrapper container">
  <table class="null-table full content-layout">
    <tr>
      <td class="header" colspan="2">
        <h1 style="background-image:url(/images/adminsystem/icons/48/content.png);">Публикации (добавляем группу)</h1>
      </td>
      <td class="column-right" rowspan="2">
        <!--Control panel-->
        <div class="control-panel">
          <a href="#" class="help">Помощь</a>
        </div>
      </td>
    </tr>
    <tr>
      <td class="column-center">
        <% form_for :item, :url=>{:action=>"create"} do |f| %>
          <fieldset>
            <div class="f-row width-50">
              <%= f.label :name, "Наименование опроса" %>
              <div class="i-wrap">
                <%= f.text_field :name, :class=>"i-text" %>
                <div title="Обязательное поле" class="req">&nbsp;</div>
              </div>
              <span class="i-help">Например: "Как вы относитесь к рекламе в СМИ?".</span>
            </div>

            <div class="f-row width-50">
              <%= f.label :tag, "тэг категории" %>
              <div class="i-wrap">
                <%= f.text_field :tag, :class=>"i-text" %>
              </div>
              <span class="i-help">Например: about-romashka-company.</span>
            </div>
          </fieldset>
          <%= submit_tag "Сохранить" %>
        <% end %>
      </td>
    </tr>
  </table>
</div>